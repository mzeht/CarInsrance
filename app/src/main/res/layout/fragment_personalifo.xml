<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/color_gray_f8"
              android:orientation="vertical"
>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_200"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="30dp"
                >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/user_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/user_icon"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="用户姓名"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </RelativeLayout>
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="请先登录"
                          android:textColor="@color/white"
                          android:textSize="18sp"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:paddingRight="50dp"
                           android:src="@mipmap/to_right_icon"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/personal_center_menu"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/my_buy"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@mipmap/personal_center_my_buy"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_padding_10"
                    android:singleLine="true"
                    android:text="采购配件"
                    android:textColor="@color/color_search_title"
                    android:textSize="@dimen/main_text_size"/>

                <RadioButton
                    android:id="@+id/customer_management"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@mipmap/personal_center_customer_management"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_padding_10"
                    android:singleLine="true"
                    android:text="客户管理"
                    android:textColor="@color/color_search_title"
                    android:textSize="@dimen/main_text_size"/>
                <!--

                <RadioButton
                    android:id="@+id/shop_management"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:paddingTop="@dimen/view_padding_10"
                    android:drawableTop="@drawable/personal_center_shop_management"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"
                    android:text="@string/str_shop_management"
                    android:textColor="@color/color_search_title"
                    android:textSize="@dimen/main_text_size" />
                -->
                <RadioButton
                    android:id="@+id/my_order"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@mipmap/personal_center_shop_management"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_padding_10"
                    android:singleLine="true"
                    android:text="业务管理"
                    android:textColor="@color/color_search_title"
                    android:textSize="@dimen/main_text_size"/>

                <RadioButton
                    android:id="@+id/share"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@mipmap/personal_center_share"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_margin"
                    android:paddingRight="@dimen/view_margin"
                    android:paddingTop="@dimen/view_padding_10"
                    android:singleLine="true"
                    android:text="分享"
                    android:textColor="@color/color_search_title"
                    android:textSize="@dimen/main_text_size"/>


            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@drawable/icon_divide"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_margin"
                android:background="@color/color_gray_f8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:background="@drawable/icon_divide"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_f8"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/all_order_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                >

                    <ImageView
                        android:id="@+id/all_order_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding_10"
                        android:src="@mipmap/icon_all_order_form"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/all_order_imageview"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:text="全部订单"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/personal_center_menu_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_padding_15"
                        android:src="@mipmap/to_right_icon"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/icon_divide"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/message_center_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/personal_center_menu_height"
                >

                    <ImageView
                        android:id="@+id/message_center_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding_10"
                        android:src="@mipmap/icon_message_center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/message_center_imageview"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:text="消息中心"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/personal_center_menu_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_padding_15"
                        android:src="@mipmap/to_right_icon"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/icon_divide"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/personal_info_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/personal_center_menu_height"
                >

                    <ImageView
                        android:id="@+id/personal_info_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding_10"
                        android:src="@mipmap/icon_personal_info"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/personal_info_imageview"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:text="个人资料"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/personal_center_menu_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_padding_15"
                        android:src="@mipmap/to_right_icon"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/icon_divide"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_margin"
                    android:background="@color/color_gray_f8"/>

                <RelativeLayout
                    android:background="@color/white"
                    android:id="@+id/content_us_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/personal_center_menu_height">

                    <ImageView
                        android:id="@+id/contact_us_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding_10"
                        android:src="@mipmap/icon_contact_us"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/contact_us_imageview"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:text="联系我们"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/personal_center_menu_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_padding_15"
                        android:src="@mipmap/to_right_icon"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/icon_divide"/>

                <RelativeLayout
                    android:id="@+id/setting_rl"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/personal_center_menu_height" >

                    <ImageView
                        android:id="@+id/feed_backs_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_padding_10"
                        android:src="@mipmap/icon_feed_backs" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/feed_backs_imageview"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/view_padding_10"
                        android:text="设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/personal_center_menu_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_padding_15"
                        android:src="@mipmap/to_right_icon" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:background="@drawable/icon_divide"/>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>
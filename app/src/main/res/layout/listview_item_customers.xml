<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:layout_marginTop="@dimen/view_margin_20"
              android:orientation="horizontal">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"

                  android:background="@color/white"
                  android:orientation="vertical">


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_search_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/view_margin"
            android:paddingLeft="@dimen/view_margin_20"
            android:paddingRight="@dimen/view_margin_20"
            android:paddingTop="@dimen/view_margin">
            <TextView
                android:id="@+id/name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="name"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/corner_sli_blue_bg"
                android:focusable="false"
                android:gravity="center"
                android:text="在营"
                android:textColor="#0091ff"
                android:textSize="12sp"
            />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/view_margin_20"
            android:layout_marginRight="@dimen/view_margin_20"
            android:background="@color/color_search_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/view_margin"
            android:paddingTop="@dimen/view_margin">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/jiage_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_title_indicator_clip_padding"
                    android:text="车牌号"
                    android:textColor="@color/color_gray999"
                    android:textSize="12sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pinpai_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color_search_title"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_title_indicator_clip_padding"
                    android:text="手机号码"
                    android:textColor="@color/color_gray999"
                    android:textSize="12sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/type_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/color_search_title"
                    android:textSize="13sp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_title_indicator_clip_padding"
                    android:text="类别"
                    android:textColor="@color/color_gray999"
                    android:textSize="12sp"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/tip_linearlayout_head_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/view_margin_20"
            android:layout_marginRight="@dimen/view_margin_20"
            android:background="@color/color_search_line"/>
        <LinearLayout
            android:id="@+id/tip_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_margin"
            android:layout_marginTop="@dimen/view_margin"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/view_margin_20"
            android:paddingRight="@dimen/view_margin_20"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:src="@mipmap/link_icon"/>
            <TextView
                android:id="@+id/tip_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_margin"
                android:paddingBottom="3dp"
                android:text="法人：中新力合"
                android:textColor="@color/color_gray999"
                android:textSize="12sp"/>


        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_search_line"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/color_gray_f8"/>

    </LinearLayout>
</LinearLayout>